{
    "type": "ScoreHud",
    "skin": "LightAndShadowResources:scoreHUD",
    "contents": {
        "type": "relativeLayout",
        "contents": [
            {
                "type": "UIBox",
                "layoutInfo": {
                    "width": 700,
                    "height": 100,
                    "position-horizontal-center": {},
                    "offset": 20
                },
                "content": {
                    "type": "relativeLayout",
                    "contents": [
                        {
                            "type": "UIImage",
                            "image": "LightAndShadowResources:spadesIcon",
                            "id": "blackTeamIcon",
                            "layoutInfo": {
                                "width": 25,
                                "height": 25,
                                "position-top": {
                                    "offset": 12
                                }
                            }
                        },
                        {
                            "type": "UILabel",
                            "id": "blackScoreLabel",
                            "family": "blackText",
                            "text": "Black Score: ",
                            "layoutInfo": {
                                "use-content-width": true,
                                "height": 60,
                                "position-left": {
                                    "widget": "blackTeamIcon",
