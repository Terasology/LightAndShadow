                            "type": "UIImage",
                            "image": "LightAndShadowResources:heartsIcon",
                            "id": "redTeamIcon",
                            "layoutInfo": {
                                "width": 25,
                                "height": 25,
                                "position-top": {
                                    "offset": 12
