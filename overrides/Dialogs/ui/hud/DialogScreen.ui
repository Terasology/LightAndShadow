{
    "type": "Dialogs:DialogScreen",
    "skin": "LightAndShadow:DialogScreen",
    "contents": {
        "type": "RowLayout",
        "contents": [
            {
                "type": "RelativeLayout",
                "contents": [
                    {
                        "type": "ScrollableArea",
                        "id": "mainContent",
                        "content": {
                            "type": "BrowserWidget",
                            "id": "browser"
                        },
                        "layoutInfo": {
                            "width": 600,
                            "height": 200,
                            "position-bottom": {
                                "offset": 50
                            },
                            "position-left": {
                                "offset": 10
                            }
                        }
                    },
                    {
                        "type": "ColumnLayout",
                        "id": "responseButtons",
                        "layoutInfo": {
                            "use-content-height": true,
                            "position-top": {
                                "target": "BOTTOM",
                                "widget": "mainContent"
                            },
                            "position-left": {
                                "target": "LEFT",
                                "widget": "mainContent"
                            },
                            "position-right": {
                                "target": "RIGHT",
                                "widget": "mainContent"
                            }
                        }
                    }
                ]
            }
        ]
    }
}
